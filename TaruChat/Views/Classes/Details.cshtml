@model TaruChat.Models.Class

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Assigns)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Subject ID</th>
                    <th>Subject Title</th>
                </tr>
                @foreach (var item in Model.Assigns)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.Title)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
