@model TaruChat.Models.ChatViewModels.ChangePwVM

@{
    ViewData["Title"] = "Change Password";
}



<div style="width: 100%; display: flex; align-items: center; justify-content: space-between">
    <h4>Profile</h4>

    <div>
        <i class="fa fa-angle-double-left" aria-hidden="true"></i>
        <a asp-action="Index">Back</a>
    </div>
</div>

<div style="width: 100%; display:flex; justify-content: center;">
    <div class="profile-box">
        <div>
            <form enctype="multipart/form-data" asp-action="Reset">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Old" class="control-label"></label>
                    <input type="password" asp-for="Old" class="form-control" style="background-color: #f7fbff" />
                    <span asp-validation-for="Old" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="New" class="control-label"></label>
                    <input type="password" asp-for="New" class="form-control" style="background-color: #f7fbff" />
                    <span asp-validation-for="New" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Confirm" class="control-label"></label>
                    <input type="password" asp-for="Confirm" class="form-control" style="background-color: #f7fbff" />
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>

                <div class="form-group" style="display: flex; justify-content: center; margin-top: 20px;">
                    <input type="submit" value="Save" class="btn btn-primary text-white" style="width: 20%" />
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="~/css/croppie.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        .profile-box {
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 60%;
            border-radius: 30px;
            padding: 20px;
            box-shadow: 0px 0px 5px 5px #eae1e1;
        }

        .validation-summary-errors,
        .field-validation-error {
            color: red;
        }

        .upload {
            display: block;
        }

            .upload img {
                display: block;
                border: 1px solid #333;
                width: 200px;
                height: 200px;
                object-fit: cover;
            }

        .panel-heading {
            border: 1px solid red;
        }

        .panel-body {
            border: 1px solid black;
        }

        #uploadimageModal {
            position: fixed;
            margin-left: auto;
            margin-right: auto;
            left: 0;
            right: 0;
            width: 600px;
            background-color: white;
            height: 600px;
        }

        .modal-header {
            display: block;
            position: relative;
            border: 1px solid gray;
        }

            .modal-header .modal-title {
                text-align: center;
            }

            .modal-header .close {
                position: absolute;
                right: 0;
                top: 0;
            }

        .modal-body {
            display: inline-block;
            vertical-align: top;
            border: 1px solid black;
            height: 450px;
            width: 100%;
            text-align: center;
        }
    </style>

}
